{{> objective-tabs route='topTenFollowing'}}
<h2>Top 10 Follow</h2>
<hr />
<div class="row" style="text-align: center;">
  {{#each users}}
  <div class="col-3">
    <a href="/users/{{this.id}}">
      {{#if this.image}}
      <img src="{{this.image}}" width="140px" height="140px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" />
      {{else}}
      <img src="https://fakeimg.pl/140/" width="140px" height="140px" />
      {{/if}}
    </a>
    <h2>{{this.name}}</h2>
    <span class="bg-secondary badge">Followersï¼š{{this.followerCount}}</span>
    <p>
    {{#if this.isFollow }}
    <form action="/follow/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
      <button type="submit" class="btn btn-danger">Unfollow</button>
    </form>
    {{else}}
    <form action="/follow/{{this.id}}" method="POST" style="display: contents;">
      <button type="submit" class="btn btn-primary">Follow</button>
    </form>
    {{/if}}
    </p>
  </div>
  {{/each}}
</div>