<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark px-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/forum/">Objectives Forum</a>
      {{#if signInUser}}
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          {{#if signInUser.isAdmin}}
          <li class="nav-item">
            <a href="/forum/admin" class="nav-link">Administrator</a>
          </li>
          {{/if}}
          <li class="nav-item d-inline-flex align-items-center">
            <span class="text-white nav-link">Hi, {{ signInUser.email }}</span>
          </li>
          <li class="nav-item">
            {{!-- <a href="/forum/users/{{ signInUser.id }}" class="nav-link text-white"> Profile </a> --}}
            <button class="btn btn-outline-light my-sm-0 my-2 me-1"
              onclick="window.location.href='/forum/users/{{ signInUser.id }}';">Profile</button>
          </li>
          <li class="nav-item">
            <form class="form-signoff" action="/forum/account/signoff" method="POST">
              <button class="btn btn-outline-danger my-sm-0 my-2" type="submit">Sign Off</button>
            </form>
          </li>
        </ul>
      </div>
      {{/if}}
    </div>
  </nav>
</header>