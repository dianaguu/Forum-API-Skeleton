{{>admin-tabs route='categories'}}
<div class="d-flex align-items-center">
  <form class="row" action="/admin/categories" method="POST">
    <div class="col-auto">
      <input class="form-control" type="text" placeholder="Category Name" name="name">
    </div>
    <div class="col-auto">
      <button class="btn btn-success" type="submit">Create</button>
    </div>
    <div class="col-auto">
      <a class="btn btn-link link-success" href="/admin/categories">Reload</a>
    </div>
  </form>
</div>
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      {{#ifCond this.id ../theCategory.id}}
      <td>
        <form class="d-flex justify-content-between" action="/admin/categories/{{this.id}}?_method=PUT" method="POST">
          <div class="col-auto">
            <input class="form-control" type="text" name="name" value="{{this.name}}">
          </div>
          <div class="col-auto">
            <button class="btn btn-link link-danger" type="submit">Update</button>
          </div>
        </form>
      </td>
      {{else}}
      <td>
        <div class="d-flex justify-content-between align-items-center">
          <div class="col-auto">
            {{this.name}}
          </div>
          <div class="col-auto">
            <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}/edit">Edit</a>
          </div>
        </div>
      </td>
      {{/ifCond}}
      <td>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`Are you sure you want to delete * {{ this.name }} * ?`)">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>