{{> objective-tabs route='home'}}
{{!-- categories --}}
<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="/objectives?categoryId=">All</a>
  </li>
  {{#each categories}}
  <li class="nav-item">
    <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}" href="/objectives?categoryId={{this.id}}">{{this.name}}</a>
  </li>
  {{/each}}
</ul>

{{!-- objectives --}}
<div class="row mt-3">
  {{#each objectives}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <a href="/objectives/{{this.id}}">
        <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
      <div class="card-body">
        <p class="card-text">
          <a href="/objectives/{{this.id}}">
            {{this.name}}
          </a>
        </p>
        <span class="badge bg-secondary">{{this.Category.name}}</span>
        <p class="card-text text-truncate">{{this.description}}</p>
        <div class="d-flex">
          {{#if isFavorite}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary m-1">Favorite</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-outline-muted m-1" style="color:gray;">Favorite</button>
          </form>
          {{/if}}
          {{#if isLike}}
          <form action="/like/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary m-1">Like</button>
          </form>
          {{else}}
          <form action="/like/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-outline-muted m-1" style="color:gray;">Like</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{!-- pagination --}}
<nav class="mt-3" aria-label="page navigation">
  <ul class="pagination">
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="/objectives?page={{pagination.previousPage}}&categoryId={{categoryId}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.pages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/objectives?page={{this}}&categoryId={{../categoryId}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="/objectives?page={{pagination.nextPage}}&categoryId={{categoryId}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>