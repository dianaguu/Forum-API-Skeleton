{{> objective-tabs route='feed'}}
<h2>News Feed</h2>
<hr />
<div class="row mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5>New Objective</h5>
      </div>
      <div class="card-body">
        {{#each objectives}}
        <div>
          <h4>
            <a class="link-primary" href="/objectives/{{this.id}}">{{this.name}}</a>
            <small class="fs-6">[{{this.Category.name}}]</small>
          </h4>
          <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
          {{relativeTimeFromNow this.createdAt}}
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5>New Comment</h5>
      </div>
      <div class="card-body">
        {{#each comments}}
        <div>
          <h4>
            <a class="link-primary" href="/objectives/{{this.Objective.id}}">{{this.Objective.name}}</a>
          </h4>
          <p class="my-4" style="white-space: break-spaces;">{{this.text}}</p>
          - <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
          <small>at {{relativeTimeFromNow this.createdAt}}</small>
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>